@{
    var gridLookup = Html.DevExpress().GridLookup(settings => {
        settings.Name = "searchTabTabelNumGridLookup";
        settings.KeyFieldName = "tabelNumber";

        settings.GridViewProperties.CallbackRouteValues = new { Controller = "Home", Action = "GridLookupPartial" };
        settings.Properties.SelectionMode = GridLookupSelectionMode.Single;
        settings.Properties.TextFormatString = "{0}";
        

        settings.GridViewProperties.SettingsPager.Visible = true;
        settings.GridViewProperties.Settings.ShowGroupPanel = false;
        settings.GridViewProperties.Settings.ShowFilterRow = false;
        settings.Width = Unit.Percentage(100);


        settings.Columns.Add(c =>
        {
            c.FieldName = "tabelNumber";
            c.Caption = "Табельный номер";
            c.Width = 150;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "workerName";
            c.Caption = "Имя сотрудника";
            c.Width = 150;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "workerSurname";
            c.Caption = "Фамилия сотрудника";
            c.Width = 150;

        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "workingPlace";
            c.Caption = "Рабочее место";
            c.Width = 150;

        });
    });
}
@gridLookup.BindList(Model).GetHtml()